{
  "name": "nestjs-hexagonal-architecture",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_OPTIONS=--experimental-vm-modules NODE_ENV=test jest --config ./test/jest-e2e.json",
    "prisma:generate": "npx prisma generate",
    "prisma:migrate": "dotenv -e .env.development -- npx prisma migrate dev"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.968.0",
    "@aws-sdk/lib-dynamodb": "^3.968.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@prisma/adapter-pg": "^7.2.0",
    "@prisma/client": "^7.2.0",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^11.0.0",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "dotenv-expand": "^12.0.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^7.2.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "uuid": "^13.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.spec.ts",
      "!**/*.interface.ts",
      "!**/*.dto.ts",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "moduleNameMapper": {
      "^generated/prisma/(.*)$": "<rootDir>/../generated/prisma/$1",
      "^@shared/(.*)$": "<rootDir>/shared/$1",
      "^@config/(.*)$": "<rootDir>/shared/infrastructure/config/$1",
      "^@database/(.*)$": "<rootDir>/shared/infrastructure/database/$1",
      "^@users/(.*)$": "<rootDir>/users/$1",
      "^@users/domain/(.*)$": "<rootDir>/users/domain/$1",
      "^@users/application/(.*)$": "<rootDir>/users/application/$1",
      "^@users/infrastructure/(.*)$": "<rootDir>/users/infrastructure/$1",
      "^@invoices/(.*)$": "<rootDir>/invoices/$1",
      "^@invoices/domain/(.*)$": "<rootDir>/invoices/domain/$1",
      "^@invoices/application/(.*)$": "<rootDir>/invoices/application/$1",
      "^@invoices/infrastructure/(.*)$": "<rootDir>/invoices/infrastructure/$1",
      "^@audit/(.*)$": "<rootDir>/audit/$1",
      "^@audit/domain/(.*)$": "<rootDir>/audit/domain/$1",
      "^@audit/application/(.*)$": "<rootDir>/audit/application/$1",
      "^@audit/infrastructure/(.*)$": "<rootDir>/audit/infrastructure/$1",
      "^@auth/(.*)$": "<rootDir>/auth/$1",
      "^@auth/domain/(.*)$": "<rootDir>/auth/domain/$1",
      "^@auth/application/(.*)$": "<rootDir>/auth/application/$1",
      "^@auth/infrastructure/(.*)$": "<rootDir>/auth/infrastructure/$1"
    },
    "preset": "ts-jest"
  }
}
